        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.persistence.mybatis.mappers.ElementoMapper">
    <select parameterType="map" id="consultarElementos" resultMap="ElementoResult" >
        select
            c.idElemento,
            c.tipo,
            c.nombre,
            c.descripcion
        FROM Elemento as c
    </select>

