<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.persistence.mybatis.mappers.ElementoMapper">
    <select parameterType="map" id="consultarElemento" resultMap="ResultadoElemento" >
        select
            c.idElemento,
            c.idEquipo,
            c.tipo,
            c.nombre,
            c.descripcion
        FROM Elemento as c
    </select>

    <select parameterType="map" id="consultarElementoDisponible" resultMap="ResultadoNuevoElemento" >
        select
            c.idElemento,
            c.idEquipo,
            c.tipo,
            c.nombre,
            c.descripcion
        FROM Elemento as c WHERE c.idEquipo = 0
    </select>

